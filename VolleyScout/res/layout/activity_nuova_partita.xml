<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NuovaPartita" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Seleziona il set"
        android:textSize="30sp" />

    <Button
        android:id="@+id/set5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/set1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:text="Set 5" />

    <Button
        android:id="@+id/set4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/set5"
        android:layout_alignLeft="@+id/set5"
        android:layout_marginBottom="15dp"
        android:text="Set 4" />

    <Button
        android:id="@+id/set3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/set4"
        android:layout_alignLeft="@+id/set4"
        android:layout_marginBottom="18dp"
        android:text="Set 3" />

    <Button
        android:id="@+id/set2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/set3"
        android:layout_alignLeft="@+id/set3"
        android:layout_marginBottom="14dp"
        android:text="Set 2" />

    <Button
        android:id="@+id/set1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/set2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Set 1" />

</RelativeLayout>