<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="190dp"
    android:layout_gravity="center"
    android:layout_margin="50dp"
    android:background="@drawable/benvenuta_box_azzurro"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:paddingLeft="20dp" >

<Button
    android:id="@+id/ok"
    style="@style/FullHeightDialog"
    android:layout_width="76dp"
    android:layout_height="50sp"
    android:layout_below="@+id/textView2"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/benvenuta_pulsante_ok"
    android:gravity="center"
    android:text="Ok" />

<TextView
    android:id="@+id/benvenuta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="31dp"
    android:text="Benvenuta"
    android:textColor="#ffffff"
    android:textSize="30sp" />

<Button
    android:id="@+id/nograzie"
    style="@style/FullHeightDialog"
    android:layout_width="76dp"
    android:layout_height="50sp"
    android:layout_alignBaseline="@+id/ok"
    android:layout_alignBottom="@+id/ok"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/ok"
    android:background="@drawable/benvenuta_pulsante_no_grazie"
    android:text="No grazie!" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="225dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:text="Imposta la data dell&apos;ultima mestruazione nei settings."
    android:textColor="#ffffff"
    android:textSize="17sp" />

</RelativeLayout>